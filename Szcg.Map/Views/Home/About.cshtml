<style>
    .toolbar {
        width: 100%;
        height: 30px;
        background-color: white;
        z-index: 9999;
        margin-top: 30px;
    }
</style>
<script>
   
    require(["esri/map", "esri/graphic", "dojo/domReady!"], function (Map, Graphic) {
        map = new Map("map", {
            basemap: "topo",
            center: [120.4986047744751, 30.54224967956543], // long, lat
            zoom: 13,
            sliderStyle: "small"
        });
        map.on("load", function () {
            var point = new Point(x, y, new SpatialReference({ wkid: 4326 }));
            var simpleMarkerSymbol = new SimpleMarkerSymbol();
            var graphic = new Graphic(point, simpleMarkerSymbol.setStyle(
        SimpleMarkerSymbol.STYLE_CIRCLE).setColor(
        new Color([0, 0, 0, 1])), null, null);

            map.graphics.add(graphic);
        });
       
    });

</script>

<div class="toolbar">
    <a class="btn" id="btn-point">画点</a>
    <a class="btn" id="btn-line">划线</a>
    <a class="btn" id="btn-shap"> 画面</a>
    <a class="btn" id="btn-mark" onclick="showMark()"> 标注</a>
    <a class="btn" id="btn-map"> 轨迹</a>
</div>
<div id="map" style="padding:0;margin:0;height:100%;position:relative;">

</div>
